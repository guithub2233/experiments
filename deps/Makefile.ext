default: fetch

all:
	make -C $(WORKDIR) $@

clean:
	-rm -r $(WORKDIR)

distclean:
	-rm -r $(TARBALL)

fetch: $(TARBALL)
$(TARBALL):
	curl -s -o $@ "$(URL)"
	@#wget -nv -O $@ $(URL)

$(PREFIX)/lib $(PREFIX)/include:
	mkdir $@


workdir: $(WORKDIR)
$(WORKDIR): $(TARBALL)
	tar $(TARFLAGS) -xf $<

configure-autoconf: $(WORKDIR)/Makefile
$(WORKDIR)/Makefile: | $(WORKDIR)
	cd $(WORKDIR); ./configure --prefix=$(PREFIX)
