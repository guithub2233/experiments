# This file is generated by Chef in the elasticsearch cookbook.

# the name advertised in the elasticsearch cluster
node.name: <%= node.name %>

# WHere to store things
path.data: /home/elasticsearch/data
path.logs: /home/elasticsearch/logs

# Cluster name
cluster.name: <%= @site %>

# The list of neighbors
discovery.zen.ping.unicast.hosts: <%= @neighbors.join(",") %>

# Set the number of nodes required for a master election to
# a >50% of the known cluster size.
discovery.zen.minimum_master_nodes: <%= (@node_count / 2) + 1  %>

# Practically never mark a node failed.
discovery.zen.fd.ping_retries: 9999999

bootstrap.mlockall: true
discovery.zen.ping.multicast.enabled: false
index.store.compress.stored: true
index.store.compress.tv: true
